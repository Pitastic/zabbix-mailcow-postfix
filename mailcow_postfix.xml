            <priority>WARNING</priority>
        </trigger>
        <trigger>
            <uuid>55c08fd0316e4dd9a42bebeb7f324e0f</uuid>
            <expression>last(/Mailcow Postfix/postfix[rejected])&gt;20 or last(/Mailcow Postfix/postfix[reject_warnings])&gt;20</expression>
