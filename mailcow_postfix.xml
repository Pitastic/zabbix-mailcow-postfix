    <triggers>
        <trigger>
            <uuid>ad11a050357942cf9325448bf31c5115</uuid>
            <expression>last(/Mailcow Postfix/postfix[held])&gt;200 or last(/Mailcow Postfix/postfix.pfmailq)&gt;200</expression>
